.row.zero-margin
  %br
  .col-md-6
    -@brands.each do |brand|
      = link_to brand.name, brand_path(brand), class: 'btn selected-button'

%br
.row.zero-margin
  .product-items-tab
    .bs-example.bs-example-tabs{"data-example-id" => "togglable-tabs", :role => "tabpanel"}
      %ul#myTab.nav.nav-tabs{:role => "tablist"}
        - @types.each do |type|
          %li.active{:role => "presentation"}
            %a#home-tab{"aria-controls" => "home", "data-toggle" => "tab", :href => "##{type}", :role => "tab"}= type
      #myTabContent.tab-content
        .tab-pane.fade.active.in{"aria-labelledby" => "home-tab", :role => "tabpanel", id: "#{@types.first}"}
          .brand_tabs
            - @first_products.each do |item|
              .col-md-3.brand-item-box
                .hs-wrapper
                  = image_tag item.images.first.picture.url, class: "img-responsive", style: "height:250px; width:220px;"
                  .w3_hs_bottom
                    %ul
                      %li
                        %a{"data-target" => "#myModal", "data-toggle" => "modal", :href => "#"}
                          %span.glyphicon.glyphicon-eye-open{"aria-hidden" => "true"}
                %h5
                  %a{:href => "single.html"}=item.name
                .simpleCart_shelfItem
                  %p
                    %span= "RS.#{item.price}"
                    %i.item_price= "Rs.#{item.price - 20}"
                  %form{:action => "#", :method => "post"}
                    %input{:name => "cmd", :type => "hidden", :value => "_cart"}/
                    %input{:name => "add", :type => "hidden", :value => "1"}/
                    %input{:name => "w3ls_item", :type => "hidden", :value => "Mobile Phone1"}/
                    %input{:name => "amount", :type => "hidden", :value => "350.00"}/
                    %button.w3ls-cart{:type => "submit"} Order Now
            .clearfix
        - @types.drop(1).each do |type|
          .tab-pane.fade{"aria-labelledby" => "home-tab", :role => "tabpanel", id: "#{type}"}
            .brand_tabs
              - @second_products.where('type_id = (?)', Type.find_by_name(type)).each do |item|
                .col-md-3.brand-item-box
                  .hs-wrapper
                    = image_tag item.images.first.picture.url, class: "img-responsive"
                    .w3_hs_bottom
                      %ul
                        %li
                          %a{"data-target" => "#myModal", "data-toggle" => "modal", :href => "#"}
                            %span.glyphicon.glyphicon-eye-open{"aria-hidden" => "true"}
                  %h5
                    %a{:href => "single.html"}=item.name
                  .simpleCart_shelfItem
                    %p
                      %span= item.price
                      %i.item_price= item.price - 20
                    %form{:action => "#", :method => "post"}
                      %input{:name => "cmd", :type => "hidden", :value => "_cart"}/
                      %input{:name => "add", :type => "hidden", :value => "1"}/
                      %input{:name => "w3ls_item", :type => "hidden", :value => "Mobile Phone1"}/
                      %input{:name => "amount", :type => "hidden", :value => "350.00"}/
                      %button.w3ls-cart{:type => "submit"} Order Now
              .clearfix
      :javascript
        $(document).ready(function(){
          $('.nav-tabs li:not(:first-child)').removeClass("active");
        })