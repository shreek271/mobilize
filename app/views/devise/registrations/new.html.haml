.container-fluid.signup-page
  .transparent-background
    .col-md-4
    .col-md-4{style: 'padding: 70px 15px'}
      .panel.panel-default.devise-bs
        .panel-heading{style: 'background:#353d47; color: white;'}
          %h4
            = "Sign up"
        .panel-body
          = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f|
            = devise_error_messages!
            .form-group
              = f.label :name, "*First Name"
              = f.text_field :first_name, class: "form-control"
            .form-group
              = f.label :name, "*Last Name"
              = f.text_field :last_name, class: "form-control"
            .form-group
              = f.label :email, "*Email"
              = f.email_field :email, class: "form-control"
            .form-group
              = f.label :password, "*Password"
              = f.password_field :password, class: "form-control"
            .form-group
              = f.label :password_confirmation, "*Password confirmation" 
              = f.password_field :password_confirmation, class: "form-control"
            %br
            = f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary"
      = render "devise/shared/links"
    .col-md-4.sign-up-side-image.text-center
    